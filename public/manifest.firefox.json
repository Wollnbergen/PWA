{
  "manifest_version": 2,
  "name": "Sultan Wallet",
  "short_name": "Sultan",
  "version": "1.6.0",
  "description": "Zero-fee blockchain wallet for Sultan L1. Send, receive, stake SLTN and interact with dApps.",
  "author": "Sultan Foundation",
  "homepage_url": "https://sltn.io",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Sultan Wallet"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    "inpage-provider.js"
  ],

  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "http://*/*",
    "https://*/*"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'; frame-ancestors 'none'",

  "browser_specific_settings": {
    "gecko": {
      "id": "wallet@sltn.io",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["healthReport"]
      }
    }
  }
}
